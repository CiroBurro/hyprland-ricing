* {
    border: none;
    font-family: Font Awesome, "Lucida Console", "Courier New", monospace;
    font-size: 15px;
    color: #ffffff;
    border-radius: 8px;
}


window {
	/*font-weight: bold;*/
}
window#waybar {
    background: rgba(10, 15, 20, 1);
}
/*-----module groups----*/
.modules-right {
    background-color: rgba(10, 15, 20, 0.9);
    margin: 0px 0 0 0;
}
.modules-center {
	background-color: rgba(0, 0, 0, 0);
    margin: 2px 0 0 0;
    padding: 0 8px 0 8px;
}
.modules-left {
    margin: 0px 0 0 0;
	background-color: rgba(10, 15, 20, 1);
}
/*-----modules indv----*/
#workspaces {
    padding: 1px 3px;
    /* background-color: transparent; */
    background-color: rgba(10, 15, 20, 0.9);
    border-radius: 15px;
}
#workspaces button {
    padding: 1px 5px;
    background-color: transparent;
    /* background-color: rgba(0,43,51,0.85); */
}
#workspaces button:hover {
    box-shadow: inherit;
    /* background-color: transparent; */
    background-color: rgba(0,153,153,1);
    border-radius: 0px;
}
#workspaces button.focused {
    background-color: transparent;
    /* background-color: rgba(0,43,51,0.85); */
}
#workspaces button.active{
    /* background-color: transparent; */
    background-color: rgba(255,90,0,1);
    border-radius: 7px;
}


#clock,
#battery,
#cpu,
#memory,
#temperature,
#network,
#pulseaudio,
#custom-media,
#tray,
#mode,
#custom-power,
#custom-menu,
#idle_inhibitor {
    padding: 0 10px;
}
#mode {
    color: #cc3436;
    font-weight: bold;
}
#custom-power {
    background-color: rgba(255,90,0,1);
    border-radius: 7px;
    padding: 0;
}

#custom-wallpaper {
    margin: 7px 5px;
}

#pulseaudio {
    margin-top: 3px;
}
/*-----Indicators----*/
#idle_inhibitor.activated {
    color: #2dcc36;
}
#pulseaudio.muted {
    color: #cc3436;
}
#battery.charging {
    color: #ffffff;
}
#battery.warning:not(.charging) {
	color: rgba(255,90,0,1);
}
#battery.critical:not(.charging) {
    color: rgba(255,90,0,1);
}
#temperature.critical {
    color: #cc3436;
}
